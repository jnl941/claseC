#include <assert.h>
#include <stdio.h>
#include <stdlib.h>
#include "../include/TEST.h"

extern void polares(float x, float y, float *r, float *theta);

void PROBAR() {
    float r, theta;

    polares(0, 0, &r, &theta);
    assert(r == 0 && theta == 0);

    polares(1, 0, &r, &theta);
    assert(r == 1 && theta == 0);

    polares(0, 1, &r, &theta);
    assert(r == 1 && theta == 90);

    polares(-1, 0, &r, &theta);
    assert(r == 1 && theta == 180);

    polares(0, -1, &r, &theta);
    assert(r == 1 && theta == 270);

    polares(1, 1, &r, &theta);
    assert(r > 1.41 && r < 1.42 && theta == 45);

    polares(-1, 1, &r, &theta);
    assert(r > 1.41 && r < 1.42 && theta == 135);

    polares(-1, -1, &r, &theta);
    assert(r > 1.41 && r < 1.42 && theta == 225);

    polares(1, -1, &r, &theta);
    assert(r > 1.41 && r < 1.42 && theta == 315);
}